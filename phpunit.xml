<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="./vendor/autoload.php" colors="true"
         processIsolation="true" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
    <coverage>
        <include>
            <directory suffix=".php">src/</directory>
        </include>
    </coverage>
    <testsuites>
        <testsuite name="unit">
            <directory suffix="./tests" phpVersion="7.4.0">./tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="API_KEY" value="yourApiKey" force="true"/>
        <env name="MOBILE" value="yourMobileNumber" force="true"/>
    </php>
</phpunit>